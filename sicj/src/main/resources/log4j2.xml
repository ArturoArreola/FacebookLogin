<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
<Properties>
<Property name="log-path">/var/uploads/sicj/log</Property>
</Properties>
<Appenders>
        <Console name="console-log" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
<RollingFile name="RollingFile" fileName="${log-path}/sicj.log"
filePattern="${log-path}/sicj-%d{yyyy-MM-dd}.log" >
<PatternLayout>
<pattern>%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</pattern>
</PatternLayout>
<Policies>
<TimeBasedTriggeringPolicy interval="1" modulate="true"/>
</Policies>
</RollingFile>
</Appenders>
<Loggers>
        <Logger name="mx.gox.infonavit.sicj" level="debug" additivity="false">
            <appender-ref ref="RollingFile" level="info"/>
        </Logger>
        <Logger name="mx.gob.infonavit.sicj" level="debug" additivity="false">
            <appender-ref ref="RollingFile" level="info"/>
        </Logger>
        <Root level="info" additivity="false">
            <AppenderRef ref="console-log"/>
        </Root>
</Loggers>
</Configuration>

